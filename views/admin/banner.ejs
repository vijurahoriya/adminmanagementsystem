  />
  <link rel="stylesheet" href="/admin/css/style.css" />
    <title>Admin Dashboard</title>
</head>
<body>
       <%- include('../../partials/admin/header.ejs') %>
       <section  id="mid">
       <div class="container">
        <div class="row">
            <%- include('../../partials/admin/left.ejs') %>
            <div class="col-md-9">
               <h2 class="text-danger">Banner Management</h2>
               <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Title</td>
                    <th>Description</td>
                    <th>Image</td>
                    <th>Long Description</td>
                    <th>Actions</td>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><%=record.title %></td>
                    <td><%=record.desc %></td>
                    <!-- <td><%=record.img %></td>   //for name -->  
                    <td><img src="/upload/<%=record.img %>" width="100px" height="100px" alt=""></td> 
                    <td><%=record.ldesc %></td>
                     <td><a href="/admin/bannerupdate/<%=record.id %>"><i class="text-success bi bi-pen-fill"></i></a></td>
                  </tr>
                </tbody>
               </table>
            </div> 
        </div>
       </div>           
       </section>
      <%- include('../../partials/admin/footer.ejs')  %>
</body>
