    <title>Admin Dashboard</title>
</head>
<body>
       <%- include('../../partials/admin/header.ejs') %>
       <section  id="mid">
       <div class="container">
        <div class="row">
            <%- include('../../partials/admin/left.ejs') %>
            <div class="col-md-9">
                <h2>Query Reply</h2>
                <form action="/admin/queryrecord/<%=record.id%>" method="post" enctype="multipart/form-data">
                  <label for="" class="form-label"><strong>To</strong></label>
                  <input type="text" class="form-control" name="emailto" id="" value="<%=record.email %>">
                  <label for="" class="form-label"><strong>Subject</strong></label>
                  <input type="text" class="form-control" name="emailsub" value="Reply : <%=record.query%>" id="">
                  <label for="" class="form-label"><strong>Body</strong></label>
                  <textarea name="emailbody" class="form-control" id=""></textarea>
                  <label for="" class="form-label"><strong>Attachment</strong></label>
                  <input type="file" name="upload" class="form-control" id="">
                  <button type="submit" class="form-control btn btn-success mt-3">Send Email</button>
                </form>
            </div>
        </div>
       </div>           
       </section>
      <%- include('../../partials/admin/footer.ejs')  %>
</body>
</html>