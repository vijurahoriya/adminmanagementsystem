<body>
   
    <%- include('../../partials/admin/header.ejs') %>
    <section id="mid">
        <div class="container">
            <div class="row">
               <%- include('../../partials/admin/left.ejs')  %>
                <div class="col-md-9">
                    <h2>Change Address</h2>
                    <form action="/admin/updateaddressrecord/<%=record.id%>" method="post">
                        <label for="" class="form-label">Address</label>
                        <input type="text" class="form-control" value="<%=record.address%>" name="address" id="">
                        <label for="" class="form-label">Mobile No.</label>
                        <input type="text" class="form-control" value="<%=record.mobile%>" name="mobile" id="">
                        <label for="" class="form-label">Phone No.</label>
                        <input type="text" class="form-control" name="phone" value="<%=record.phone%>" id="">
                        <button type="submit" class="btn btn-info my-2 form-control">SaveChange</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <%- include('../../partials/admin/footer.ejs') %>
