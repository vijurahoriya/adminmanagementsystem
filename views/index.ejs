<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
    crossorigin="anonymous"
  />
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"
  ></script>
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
  />
    <title>Frontend</title>
</head>
<body>
  <!-- header section  -->
      <%-include('../partials/header.ejs')%>
      <!-- banner section -->
      <section>
        <div class="row bg-success">
            <div class="col-md-8 ">
              <h2 class="text-center text-light"><%=record.title %></h2>
              <p class="me-5 ms-5 text-center text-light"><%=record.desc %></p>
              <p class="text-center"> <a class="" href="/banner">
                <button class="btn btn-info" type="submit">More Details</button>
              </a>
            </p>
            </div>
            <div class="col-md-4 text-center">
                <img class="mt-4" style="border-radius: 50px;" src="/upload/<%=record.img %>" width="100px" height="100px" alt="">
            </div>
        </div>
      </section>
      <!-- services section -->
      <section>
        <div class="row">
            <h2 class="text-center">Services</h2>
            <%serviceRecord.forEach((result)=>{%>
            <div class="col-md-3 d-flex flex-wrap justify-content-around">  
                <div class="card m-3" style="width: 18rem;">
                  <img src="/upload/<%=result.img %>" height="200px" class="card-img-top bg-none" alt="image">
                  <div class="card-body">
                    <h5 class="card-title"><%=result.title %></h5>
                    <p class="card-text"><%=result.desc%></p>
                    <a href="/moreservices/<%=result.id%>" class="btn btn-primary">More Details</a>
                  </div>
                </div>          
            </div>
            <%})%>  
        </div>
      </section>
<!-- test section -->
      <section>
        <div class="row">
            <h2 class="text-center">Testimonials</h2>    
            <div class="col-md-12 d-flex flex-wrap justify-content-around">
              <%testirecord.forEach((result)=>{%>
              <div class="card m-3" style="width: 18rem;">
                  <img src="/upload/<%=result.img%>" class="card-img-top bg-none" alt="...">
                  <div class="card-body">
                    <p class="card-text"><span><i class="bi bi-quote"></i></span><%=result.quote%><span><i class="bi bi-quote"></i></span> </p>
                  </div>
                  <p class="text-uppercase"><%=result.company%></p>
                </div>
                <%})%>
          </div>
        
        </div>
      </section>
<!-- footer secction -->
     <%-include('../partials/footer.ejs')%>
</body>
</html>